{
  "name": "Nexcess SDK",
  "version": "0.1",
  "description": "SDK for interacting with the nexcess.net / thermo.io client APIs",
  "type": "library",
  "homepage": "https://github.com/nexcess/nexcess-sdk",
  "license": "MIT",
  "support": {},
  "require": {
    "php": "^7.0",
    "guzzlehttp/guzzle": "^6.0",
    "php-enspired/exceptable": "~1.2"
  },
  "autoload": {
    "psr-4": { "Nexcess\\Sdk\\": "src/" }
  },
  "require-dev": {
    "phpunit/phpunit": "^5.0",
    "phan/phan": "0.8.11",
    "nocworx/phpcs": "^1.4"
  },
  "autoload-dev": {
    "psr-4": { "Nexcess\\Sdk\\Tests\\": "tests/" }
  },
  "scripts": {
    "tests:unit": "vendor/bin/phpunit",
    "tests:phan": "vendor/bin/phan",
    "tests:phpcs": "vendor/bin/phpcs --standard=NocWorx"
  },
  "repositories": [
    { "type": "vcs", "url": "https://github.com/nocworx/phpcs" }
  ]
}
